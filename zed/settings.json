// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "sticky_scroll": {
    "enabled": true
  },
  "buffer_font_weight": 400.0,
  "buffer_line_height": "standard",
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "mistral",
      "model": "codestral-latest"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "theme": "One Dark",
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "autosave": {
    "after_delay": { "milliseconds": 1000 }
  },
  // Soft-wrap and rulers
  "soft_wrap": "none", // none, editor_width, preferred_line_length, bounded
  "preferred_line_length": 120, // Column to soft-wrap
  "show_wrap_guides": true, // Show/hide wrap guides (vertical rulers)
  "wrap_guides": [80, 120],

  // Splitting
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",

  // Fonts
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "buffer_font_family": "Iosevka",
  "buffer_font_features": {
    "calt": true,
    "clig": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": true,
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "imports": {
          "granularity": {
            "group": "module"
          }
        }
      }
    },
    "pylsp": {
      "settings": {
        "plugins": {
          "ruff": {
            "enabled": true
          }
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "harper-ls", "!pyright"]
    },
    "C++": {
      "language_servers": ["clangd", "harper-ls"],
      "format_on_save": "on"
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "terminal": {
    "font_family": "Iosevka Nerd Font Mono"
  },
  "file_types": {
    "HTML": ["hbs"]
  }
}
